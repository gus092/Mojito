<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon"
        style="@style/ThemeOverlay.FirebaseIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-200sp"
        android:src="@drawable/mojito" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_facebookSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_emailSignIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32sp"
        android:text="@string/fui_sign_in_with_facebook"
        android:textAllCaps="false" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_googleSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_facebookSignIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32sp"/>

    <Button
        android:id="@+id/btn_emailSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-200sp"
        android:text="Sign in with Email"
        android:textAllCaps="false" />

</RelativeLayout>